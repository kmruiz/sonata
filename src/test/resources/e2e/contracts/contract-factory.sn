requires std.io

contract Pinger {
    let ping(message: string)

    class let person(name: string): Pinger = Person(name)
}

entity class Person(name: string) implements Pinger {
    let ping(message: string) = println(name + ': ' + message)
}

let morty: Pinger = Pinger.person('Morty') ;; all contracts are for entities, so all contracts have the stop method
morty.ping('Rick')
morty.stop()